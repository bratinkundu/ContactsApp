<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".contact_detail">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Details"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica" android:layout_above="@+id/imageView"
            android:layout_marginBottom="32dp" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imageView"
            android:background="@drawable/profile_shape"
            android:layout_above="@+id/textView2"
            android:layout_marginBottom="42dp" android:layout_alignParentEnd="true" android:layout_marginEnd="140dp"/>

    <TextView
            android:text="Name:-"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginBottom="22dp"
            android:layout_above="@+id/textView"/>
    <TextView
            android:text="Contact No:-"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginBottom="21dp"
            android:layout_above="@+id/textView1"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email id:-"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:id="@+id/textView1"
            android:layout_above="@+id/tvwork" android:layout_marginBottom="19dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work:-"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:id="@+id/tvwork"
            android:layout_above="@+id/tvaddress" android:layout_marginBottom="17dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:-"
            android:paddingTop="7dp"
            android:textSize="20sp"
            android:id="@+id/tvaddress"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="23dp"/>
</RelativeLayout>